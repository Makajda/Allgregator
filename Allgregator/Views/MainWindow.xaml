<Window x:Class="Allgregator.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:common="clr-namespace:Allgregator.Common"
        xmlns:prism="http://prismlibrary.com/"  
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}"
        >

    <Grid Background="#91C9FF">
            <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Text="Rss" 
                   FontSize="48" 
                   FontStretch="ExtraExpanded"
                   FontFamily="Comic"
                   VerticalAlignment="Center" 
                   Margin="50,0,0,0"
                   Foreground="Green"
                   />

        <ContentControl Grid.Row="0" prism:RegionManager.RegionName="{x:Static common:Given.MenuRegion}" HorizontalAlignment="Right"/>
        <ContentControl Grid.Row="1" prism:RegionManager.RegionName="{x:Static common:Given.MainRegion}" Margin="0,30,0,0"/>
    </Grid>
</Window>
