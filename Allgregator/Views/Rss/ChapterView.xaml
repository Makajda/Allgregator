<UserControl x:Class="Allgregator.Views.Rss.ChapterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=System.Runtime"
             xmlns:common="clr-namespace:Allgregator.Common"
             >

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <common:IdEqToVisibilityConverter x:Key="IdEqToVisibilityConverter"/>
        <sys:Double x:Key="widthMainButton">150</sys:Double>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Button Width="{StaticResource widthMainButton}" Content="{Binding Name}" Command="{Binding DataContext.ActivateCommand, 
            RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl, AncestorLevel=2}}" CommandParameter="{Binding}">
            <Button.Visibility>
                <MultiBinding Converter="{StaticResource IdEqToVisibilityConverter}" ConverterParameter="reverse">
                    <Binding Path="Id"/>
                    <Binding Path="DataContext.CurrentChapter.Id" RelativeSource="{RelativeSource FindAncestor, AncestorType=UserControl, AncestorLevel=2}"/>
                </MultiBinding>
            </Button.Visibility>
        </Button>

        <Border BorderBrush="Blue" BorderThickness="5">
            <Border.Visibility>
                <MultiBinding Converter="{StaticResource IdEqToVisibilityConverter}">
                    <Binding Path="Id"/>
                    <Binding Path="DataContext.CurrentChapter.Id" RelativeSource="{RelativeSource FindAncestor, AncestorType=UserControl, AncestorLevel=2}"/>
                </MultiBinding>
            </Border.Visibility>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.RowSpan="2">
                    <Button Content="news" Command="{Binding DataContext.NewsCommand, 
                        RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl, AncestorLevel=2}}"
                            Visibility="{Binding  DataContext.IsNewsVisible, Converter={StaticResource BooleanToVisibilityConverter},
                        RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl, AncestorLevel=2}}"/>
                    <Button Content="olds" Command="{Binding DataContext.OldsCommand, 
                        RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl, AncestorLevel=2}}"
                            Visibility="{Binding  DataContext.IsOldsVisible, Converter={StaticResource BooleanToVisibilityConverter},
                        RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl, AncestorLevel=2}}"/>
                    <Button Content="links" Command="{Binding DataContext.LinksCommand,
                        RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl, AncestorLevel=2}}"
                            Visibility="{Binding  DataContext.IsLinksVisible, Converter={StaticResource BooleanToVisibilityConverter},
                        RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl, AncestorLevel=2}}"/>
                </StackPanel>
                <Button Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Width="{StaticResource widthMainButton}" Content="{Binding Name}"
                        Command="{Binding DataContext.OpenCommand,
                    RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl, AncestorLevel=2}}"/>
                <Button Grid.Row="0" Grid.Column="2" Content="del" Command="{Binding DataContext.DeleteCommand,
                    RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl, AncestorLevel=2}}"/>
                <Button Grid.Row="1" Grid.Column="2" Content="update" Command="{Binding DataContext.UpdateCommand,
                    RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl, AncestorLevel=2}}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
