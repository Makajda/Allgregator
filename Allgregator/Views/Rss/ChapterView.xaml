<UserControl x:Class="Allgregator.Views.Rss.ChapterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=System.Runtime"
             xmlns:common="clr-namespace:Allgregator.Common"
             >

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <common:BooleanToNotVisibilityConverter x:Key="BooleanToNotVisibilityConverter"/>
        <sys:Double x:Key="widthMainButton">150</sys:Double>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="5,3,5,3"/>
            <Setter Property="Padding" Value="15"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="0,0,0,5">
        <Button Width="{StaticResource widthMainButton}" 
                Content="{Binding Chapter.Name}" 
                Command="{Binding ActivateCommand}"
                Visibility="{Binding IsActive, Converter={StaticResource BooleanToNotVisibilityConverter}}"/>

        <Border BorderBrush="Blue" 
                BorderThickness="5"
                Visibility="{Binding IsActive, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.RowSpan="2">
                    <Button Content="news" Command="{Binding NewsCommand}"
                            Visibility="{Binding IsNewsVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <Button Content="olds" Command="{Binding OldsCommand}"
                            Visibility="{Binding IsOldsVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <Button Content="links" Command="{Binding LinksCommand}"
                            Visibility="{Binding  IsLinksVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>
                <Button Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" 
                        Width="{StaticResource widthMainButton}" 
                        Content="{Binding Chapter.Name}"
                        Command="{Binding OpenCommand}"/>
                <Button Grid.Row="0" Grid.Column="2" Content="del" Command="{Binding DeleteCommand}"/>
                <Button Grid.Row="1" Grid.Column="2" Content="update" Command="{Binding UpdateCommand}"/>
            </Grid>
        </Border>

        <Rectangle Height="5" Fill="Orange" VerticalAlignment="Bottom" Margin="5,0,5,0"
                Visibility="{Binding IsLinksVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>
    </Grid>
</UserControl>
