<Window x:Class="Allgregator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:common="clr-namespace:Allgregator.Aux.Common;assembly=Allgregator.Aux"
        xmlns:prism="http://prismlibrary.com/"  
        prism:ViewModelLocator.AutoWireViewModel="True"
        xmlns:converters="clr-namespace:Allgregator.Aux.Converters;assembly=Allgregator.Aux"
        Title="{Binding Title}"
        >

    <Window.Resources>
        <converters:BooleanToContentConverter x:Key="BooleanToContentConverter" TrueContent="&#x25B4;" FalseContent="&#x25B5;"/>
    </Window.Resources>
    
    <Grid Background="{StaticResource Main.Background}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <ToggleButton Content="{Binding IsChecked, RelativeSource={RelativeSource Self}, Converter={StaticResource BooleanToContentConverter}}"
                      FontSize="32" Foreground="{StaticResource Button.Manager.Foreground}"
                      Padding="0" Width="60" Height="60" VerticalAlignment="Top"
                      BorderThickness="0" Background="Transparent" common:Shaatt.Circle="True"
                      IsChecked="{Binding Topmost, RelativeSource={RelativeSource AncestorType=Window}}"/>
        <ContentControl Grid.Column="1" prism:RegionManager.RegionName="{x:Static common:Given.MenuFinRegion}" />
        <ContentControl Grid.Column="2" prism:RegionManager.RegionName="{x:Static common:Given.MenuRssRegion}" />
        <ContentControl Grid.Row="1" Grid.ColumnSpan="3" prism:RegionManager.RegionName="{x:Static common:Given.MainRegion}" />
    </Grid>
</Window>
